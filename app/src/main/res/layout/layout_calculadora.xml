<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90787664"
    android:orientation="vertical"
    android:paddingVertical="80dp">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:background="#F8F8F8"
            android:ems="10"
            android:fontFamily="@font/courier_prime_bold"
            android:hint="0000"
            android:inputType="number"
            android:textAlignment="textEnd" />

        <Button
            android:id="@+id/button"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:backgroundTint="#736B6B"
            android:text="CE"
            app:rippleColor="#B66F6F" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botao1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="1" />

        <Button
            android:id="@+id/botao2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="2" />

        <Button
            android:id="@+id/botao3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="3" />

        <Button
            android:id="@+id/mais"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botao4"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="4" />

        <Button
            android:id="@+id/botao5"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="5" />

        <Button
            android:id="@+id/botao6"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="6" />

        <Button
            android:id="@+id/menos"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botao7"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="7" />

        <Button
            android:id="@+id/botao8"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="8" />

        <Button
            android:id="@+id/botao9"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="9" />

        <Button
            android:id="@+id/vezes"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ponto"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="." />

        <Button
            android:id="@+id/botao0"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="0" />

        <Button
            android:id="@+id/igual"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="=" />

        <Button
            android:id="@+id/barra"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:height="10dp"
            android:backgroundTint="#90787664"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>

